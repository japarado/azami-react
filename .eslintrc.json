{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
				"no-null"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": [
            "warn"
        ],
        "no-var": [
            "warn"
        ],
        "brace-style": [
            "warn",
            "allman"
        ],
        "arrow-parens": [
            "warn"
        ],
        "prefer-arrow-callback": [
            "warn"
        ],
				"valid-jsdoc": [
					"warn"
				],
				"object-curly-spacing": [
					"warn",
					"always"
				],
				"react/jsx-max-props-per-line":[
					"warn"
				],
				"react/no-unused-prop-types": [
					"warn"
				],
				"no-null/no-null": 2
    },
		"parser": "babel-eslint"
}
